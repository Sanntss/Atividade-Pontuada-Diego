programa {
  funcao inicio() {
    
  inteiro a, b 
  real soma, subtracao, multiplicacao, divisao
  caracter
   operacao

  escreva("Digite o a: ")
  leia(b)
  
  escreva("Digite a b: ")
  leia(a)

  escreva("Qual operação Deseja Realizar: ")
  leia(operacao)

  escolha(operacao){
caso "+":
 soma = a + b
  escreva("A soma dos números: ", soma)
 pare
 caso "-": 
 subtracao = a - b
 escreva("A subtração dos números: ", subtracao)
 pare
 caso"*":
 multiplicacao = a * b
 escreva("A multiplicação dos números é: ", multiplicacao)
 pare 
 caso "/":
 divisao = a / b
 escreva("A divisão dos números é: ", divisao)
 pare
 caso contrario: escreva("Operação Não realizada!")
  }
    
  }
}
