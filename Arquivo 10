programa { 
  funcao inicio() {
    
 real gasolina = 6.59 
 real alcool = 3.79 
 real desconto, litros, valorTotal, total
 cadeia combustivel 
 escreva("Quanto de Combustível Desejado:\n") 
 leia(combustivel) 
 escolha (combustivel){ 


      caso "Gl": gasolina 
      escreva("Qual Quantidade de Litros:\n") 
      leia(litros) 
      se(litros<=25){


      valorTotal= gasolina * litros 
      total= valorTotal- (valorTotal * (3/100))

      escreva("O Valor Total a se Pagar é de : R$", total) } 
      se(litros> 25){


      valorTotal= gasolina * litros 
      total= valorTotal -(valorTotal * (5/100))


      escreva("O Valor total a se pagar é de : R$", total) } 
      pare 
      caso "Al": 
      escreva("Digite á quantidade ?\n") 
      leia(litros)


      se(litros<=25){ 
      valorTotal= alcool * litros 
      total= valorTotal- (valorTotal * (2/100)) 
      escreva("O Valor Total a se pagar é: R$", total) } 
      se(litros> 25){ 


      valorTotal= alcool * litros 
      total= valorTotal -(valorTotal * (4/100)) 

      escreva("O Valor Total a se pagar é: R$", total) }

}
  }
}
10
